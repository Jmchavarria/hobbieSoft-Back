// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tasks {
  id          String   @id @default(uuid())
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Users {
  id          String   @id @default(uuid())
  name        String
  lastName    String
  docType     String
  docNumber   String   @unique
  sex         String
  email       String   @unique
  phoneNumber String
  password    String
  birthday    DateTime
  status      Boolean
  online      Boolean  @default(false)
  roleId      String
  role        Roles    @relation(fields: [roleId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Modules {
  id          String        @id @default(uuid())
  name        String        @unique
  status      Boolean
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  permissions Permissions[]
}

model Roles {
  id          String        @id @default(uuid())
  name        String        @unique
  description String
  status      Boolean
  users       Users[]
  permissions Permissions[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Permissions {
  id         String    @id @default(uuid())
  roleId     String
  moduleId   String
  status     Boolean
  privilege  Privilege
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  role       Roles     @relation(fields: [roleId], references: [id])
  module     Modules   @relation(fields: [moduleId], references: [id])
  
}

enum Privilege {
  GET
  POST
  PUT
  DELETE
}
